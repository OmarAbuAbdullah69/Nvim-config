{
  "diagnostics": {
    "virtual_text": {
      "enabled": true
    },
    "underline": {
      "enabled": true
    }
  },
  "langs": {
    "json": {
      "highlight": true,
      "completion": false,
      "server": "",
      "formatter": [
        "json_repair"
      ]
    },
    "c": {
      "highlight": true,
      "completion": true,
      "server": "clangd",
      "formatter": [
        "clang-format"
      ]
    },
    "cpp": {
      "highlight": true,
      "completion": true,
      "server": "clangd",
      "formatter": [
        "clang-format"
      ]
    },
    "lua": {
      "highlight": true,
      "completion": true,
      "server": "lua_ls",
      "formatter": [
        "stylua"
      ]
    }
  },
  "completion": {
    "enable": true,
    "ghost_text": false,
    "select": "<CR>",
    "abort": "<C>",
    "complete": "<C-Space>",
    "select_behavior": "select",
    "next": "<Tab>",
    "prev": "<S-Tab>"
  },
  "themes": {
    "available": {
      "monokai-pro": "loctvl842/monokai-pro.nvim",
      "tokyonight-night": "folke/tokyonight.nvim",
      "catppuccin": "catppuccin/nvim",
      "dracula": "Mofiqul/dracula.nvim"
    },
    "selected": [
      "monokai-pro",
      "tokyonight-night",
      "catppuccin",
      "dracula"
    ]
  },
  "options": {
    "backup": false,
    "clipboard": "unnamedplus",
    "cmdheight": 1,
    "completeopt": [
      "menuone",
      "noselect"
    ],
    "conceallevel": 0,
    "fileencoding": "utf-8",
    "hlsearch": true,
    "ignorecase": true,
    "mouse": "a",
    "pumheight": 10,
    "showmode": false,
    "showtabline": 2,
    "smartcase": true,
    "smartindent": true,
    "splitbelow": true,
    "splitright": true,
    "swapfile": false,
    "timeoutlen": 300,
    "undofile": true,
    "updatetime": 300,
    "writebackup": false,
    "expandtab": false,
    "shiftwidth": 2,
    "tabstop": 2,
    "cursorline": true,
    "number": true,
    "relativenumber": true,
    "numberwidth": 2,
    "signcolumn": "yes",
    "wrap": false,
    "linebreak": true,
    "scrolloff": 8,
    "sidescrolloff": 8,
    "guifont": "monospace:h17",
    "whichwrap": "bs<>[]hl"
  },
  "keymaps": {
    "leader": "<Space>",
    "lsp": {
      "hover": "K",
      "code_action": "<leader>a",
      "definition": "<leader>d",
      "rename": "<leader>r",
      "type_definition": "<leader>t",
      "references": "<leader>R",
      "declaration": "<leader>D",
      "implementation": "<leader>i",
      "document_symbol": "<leader>s",
      "signature_help": "<C-k>"
    },
    "diagnostic": {
      "goto_prev": "[g",
      "goto_next": "]g",
      "toggle": "<leader>dt",
      "open_float": "<leader>e"
    },
    "autopairs": {
      "fast_wrap": "<A-e>"
    },
    "boole": {
      "increment": "<C-a>",
      "decrement": "<C-x>"
    },
    "commenter": {
      "toggler": {
        "line": "gc",
        "block": "gb"
      },
      "opleader": {
        "line": "gc",
        "block": "gb"
      },
      "extra": {
        "above": "gcO",
        "below": "gco",
        "eol": "gcA"
      }
    },
    "terminal": {
      "mapping": "<leader>t"
    },
    "modes": {
      "n": {
        "<leader>q": ":q<CR>",
        "<leader>w": ":w<CR>",
        "<leader>wq": ":wq<CR>",
        "<leader>Q": ":qa!<CR>",
        "<leader>bn": ":BufferNext<CR>",
        "<leader>bp": ":BufferPrevious<CR>",
        "<leader>bc": ":BufferClose<CR>",
        "<C-h>": "<C-w>h",
        "<C-j>": "<C-w>j",
        "<C-k>": "<C-w>k",
        "<C-l>": "<C-w>l",
        "dp": "d$",
        "<A-Up>": ":MoveLine -1<CR>",
        "<A-Down>": ":MoveLine 1<CR>",
        "<A-S-Left>": ":MoveWord -1<CR>",
        "<A-S-Right>": ":MoveWord 1<CR>",
        "<leader>e": ":NvimTreeToggle<CR>",
        "<leader>=": ":lua require('conform').format()<CR>",
        "<leader>ff": ":Telescope find_files<CR>",
        "<leader>fg": ":Telescope live_grep<CR>",
        "<leader>fb": ":Telescope buffers<CR>",
        "<leader>fh": ":Telescope help_tags<CR>"
      },
      "i": {
        "jk": "<ESC>"
      },
      "v": {
        "<": "<gv^",
        ">": ">gv^",
        "<A-Left>": ":MoveHBlock -1<CR>",
        "<A-Right>": ":MoveHBlock 1<CR>"
      },
      "x": {
        "<A-Up>": ":MoveBlock 1<CR>",
        "<A-Down>": ":MoveBlock -1<CR>"
      }
    }
  },
  "filetree": {
    "sort": {
      "items_first": "folders"
    },
    "view": {
      "width": 30,
      "side": "right",
      "centralize_selection": true,
      "cursorline": true
    },
    "modified": {
      "enable": true,
      "show_ondir": true
    },
    "filters": {
      "enable": true,
      "dotfiles": false
    },
    "diagnostics": {
      "enable": true,
      "show_ondir": true
    },
    "renderer": {
      "group_empty": false,
      "icons": {
        "file": true,
        "folder": true,
        "folder_arrow": true,
        "git": true
      }
    },
    "actions": {
      "close_on_fileopen": true
    }
  }
}
